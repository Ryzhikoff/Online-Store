<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/star1"
        android:layout_width="@dimen/star_view_icon_width"
        android:layout_height="@dimen/star_view_icon_width"
        android:layout_marginHorizontal="@dimen/star_view_margin_horizontal"
        android:layout_marginVertical="@dimen/star_view_margin_vertical"
        tools:src="@drawable/icon_star_half"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/star2"
        android:layout_width="@dimen/star_view_icon_width"
        android:layout_height="@dimen/star_view_icon_width"
        android:layout_marginHorizontal="@dimen/star_view_margin_horizontal"
        android:layout_marginVertical="@dimen/star_view_margin_vertical"
        tools:src="@drawable/icon_star_half"
        tools:ignore="ContentDescription"/>
    <ImageView
        android:id="@+id/star3"
        android:layout_width="@dimen/star_view_icon_width"
        android:layout_height="@dimen/star_view_icon_width"
        android:layout_marginHorizontal="@dimen/star_view_margin_horizontal"
        android:layout_marginVertical="@dimen/star_view_margin_vertical"
        tools:src="@drawable/icon_star_half"
        tools:ignore="ContentDescription"/>
    <ImageView
        android:id="@+id/star4"
        android:layout_width="@dimen/star_view_icon_width"
        android:layout_height="@dimen/star_view_icon_width"
        android:layout_marginHorizontal="@dimen/star_view_margin_horizontal"
        android:layout_marginVertical="@dimen/star_view_margin_vertical"
        tools:src="@drawable/icon_star_half"
        tools:ignore="ContentDescription"/>
    <ImageView
        android:id="@+id/star5"
        android:layout_width="@dimen/star_view_icon_width"
        android:layout_height="@dimen/star_view_icon_width"
        android:layout_marginHorizontal="@dimen/star_view_margin_horizontal"
        android:layout_marginVertical="@dimen/star_view_margin_vertical"
        tools:src="@drawable/icon_star_half"
        tools:ignore="ContentDescription"/>

</LinearLayout>